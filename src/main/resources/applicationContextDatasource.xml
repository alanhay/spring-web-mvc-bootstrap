<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="dataSource" class="org.apache.tomcat.dbcp.dbcp.BasicDataSource">
		<property name="driverClassName" value="${database.driver}" />
		<property name="url"
			value="jdbc:mysql://#{systemProperties['database.server']}:${database.port}/#{systemProperties['database.name']}" />
		<property name="username" value="#{systemProperties['database.user']}" />
		<property name="password" value="#{systemProperties['database.password']}" />
		<property name="initialSize" value="4" />
		<property name="maxActive" value="6" />
		<property name="maxWait" value="10000" />
		<property name="validationQuery" value="SELECT count(*) FROM users" />
		<property name="testOnBorrow" value="true" />
	</bean>
</beans>